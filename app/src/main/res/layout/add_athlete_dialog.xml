<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_bg"
     >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/add_ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                 style="@style/custom_normal_textview"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="运动员姓名:"
                 />

            <com.scnu.swimmingtrainsystem.view.ClearEdittext
                android:id="@+id/add_et_user"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_edittext_selector"
                android:maxLength="10"
                android:paddingLeft="5dp"
                android:singleLine="true" >
            </com.scnu.swimmingtrainsystem.view.ClearEdittext>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_ll3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_ll2"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                 style="@style/custom_normal_textview"
                android:id="@+id/tv_userID"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:text="运动员年龄:"
                 />

            <com.scnu.swimmingtrainsystem.view.ClearEdittext
                android:id="@+id/add_et_age"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_edittext_selector"
                android:inputType="number"
                android:maxLength="2"
                android:paddingLeft="5dp" >
            </com.scnu.swimmingtrainsystem.view.ClearEdittext>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_ll4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_ll3"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                style="@style/custom_normal_textview"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:text="性别"
                 />
            <RadioGroup
                android:id="@+id/rg_gender"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <RadioButton
                    style="@style/stop_watch_radio_btn"
                    android:id="@+id/rb_male"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/male"/>
                <RadioButton
                    style="@style/stop_watch_radio_btn"
                    android:id="@+id/rb_female"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@string/female"/>
            </RadioGroup>
        </LinearLayout>
        
         <LinearLayout
            android:id="@+id/add_ll7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_ll4"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                 style="@style/custom_normal_textview"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:text="运动员编号:"
                 />

            <com.scnu.swimmingtrainsystem.view.ClearEdittext
                android:id="@+id/add_et_number"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_edittext_selector"
                android:maxLength="8"
                android:paddingLeft="5dp"
                android:singleLine="true" >
            </com.scnu.swimmingtrainsystem.view.ClearEdittext>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_ll5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_ll7"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                style="@style/custom_normal_textview"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:text="联系方式:"
                />

            <com.scnu.swimmingtrainsystem.view.ClearEdittext
                android:id="@+id/add_et_contact"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_edittext_selector"
                android:inputType="number"
                android:maxLength="20"
                android:paddingLeft="5dp"
                android:singleLine="true" >
            </com.scnu.swimmingtrainsystem.view.ClearEdittext>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_ll6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/add_ll5"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                style="@style/custom_normal_textview"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:text="备注:"
                 />

            <com.scnu.swimmingtrainsystem.view.ClearEdittext
                android:id="@+id/add_et_extra"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:maxLength="50"
                android:background="@drawable/bg_edittext_selector"
                android:paddingLeft="5dp" >
            </com.scnu.swimmingtrainsystem.view.ClearEdittext>
        </LinearLayout>
    </LinearLayout>
</ScrollView>